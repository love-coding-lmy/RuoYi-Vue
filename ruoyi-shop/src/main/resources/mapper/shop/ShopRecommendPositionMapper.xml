<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.shop.mapper.ShopRecommendPositionMapper">

    <resultMap type="ShopRecommendPosition" id="ShopRecommendPositionResult">
        <result property="positionId"    column="position_id"    />
        <result property="positionName"    column="position_name"    />
        <result property="positionCode"    column="position_code"    />
        <result property="positionType"    column="position_type"    />
        <result property="maxItems"    column="max_items"    />
        <result property="width"    column="width"    />
        <result property="height"    column="height"    />
        <result property="templateType"    column="template_type"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectPositionVo">
        select position_id, position_name, position_code, position_type, max_items, width, height, template_type, remark, status, create_by, create_time, update_by, update_time
        from shop_recommend_position
    </sql>

    <select id="selectPositionById" parameterType="Long" resultMap="ShopRecommendPositionResult">
        <include refid="selectPositionVo"/>
        where position_id = #{positionId}
    </select>

    <select id="selectPositionList" parameterType="ShopRecommendPosition" resultMap="ShopRecommendPositionResult">
        <include refid="selectPositionVo"/>
        <where>
            <if test="positionName != null and positionName != ''">
                AND position_name like concat('%', #{positionName}, '%')
            </if>
            <if test="positionCode != null and positionCode != ''">
                AND position_code = #{positionCode}
            </if>
            <if test="positionType != null and positionType != ''">
                AND position_type = #{positionType}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
        order by create_time desc
    </select>

    <insert id="insertPosition" parameterType="ShopRecommendPosition" useGeneratedKeys="true" keyProperty="positionId">
        insert into shop_recommend_position
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="positionName != null and positionName != ''">position_name,</if>
            <if test="positionCode != null and positionCode != ''">position_code,</if>
            <if test="positionType != null">position_type,</if>
            <if test="maxItems != null">max_items,</if>
            <if test="remark != null">remark,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            create_time
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="positionName != null and positionName != ''">#{positionName},</if>
            <if test="positionCode != null and positionCode != ''">#{positionCode},</if>
            <if test="positionType != null">#{positionType},</if>
            <if test="maxItems != null">#{maxItems},</if>
            <if test="positionDesc != null">#{remark},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            sysdate()
        </trim>
    </insert>

    <update id="updatePosition" parameterType="ShopRecommendPosition">
        update shop_recommend_position
        <trim prefix="SET" suffixOverrides=",">
            <if test="positionName != null and positionName != ''">position_name = #{positionName},</if>
            <if test="positionCode != null and positionCode != ''">position_code = #{positionCode},</if>
            <if test="positionType != null">position_type = #{positionType},</if>
            <if test="maxItems != null">max_items = #{maxItems},</if>
            <if test="positionDesc != null">remark = #{remark},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            update_time = sysdate()
        </trim>
        where position_id = #{positionId}
    </update>

    <delete id="deletePositionById" parameterType="Long">
        delete from shop_recommend_position where position_id = #{positionId}
    </delete>

    <delete id="deletePositionByIds" parameterType="Long">
        delete from shop_recommend_position where position_id in
        <foreach item="positionId" collection="array" open="(" separator="," close=")">
            #{positionId}
        </foreach>
    </delete>

</mapper>
