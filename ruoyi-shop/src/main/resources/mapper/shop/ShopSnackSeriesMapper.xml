<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.shop.mapper.ShopSnackSeriesMapper">

    <resultMap type="ShopSnackSeries" id="ShopSnackSeriesResult">
        <result property="seriesId"    column="series_id"    />
        <result property="seriesName"    column="series_name"    />
        <result property="seriesCode"    column="series_code"    />
        <result property="seriesImage"    column="series_image"    />
        <result property="seriesDesc"    column="series_desc"    />
        <result property="sortOrder"    column="sort_order"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectSeriesVo">
        select series_id, series_name, series_code, series_image, series_desc, sort_order, status, create_by, create_time, update_by, update_time
        from shop_snack_series
    </sql>

    <select id="selectSeriesById" parameterType="Long" resultMap="ShopSnackSeriesResult">
        <include refid="selectSeriesVo"/>
        where series_id = #{seriesId}
    </select>

    <select id="selectSeriesList" parameterType="ShopSnackSeries" resultMap="ShopSnackSeriesResult">
        <include refid="selectSeriesVo"/>
        <where>
            <if test="seriesName != null and seriesName != ''">
                AND series_name like concat('%', #{seriesName}, '%')
            </if>
            <if test="seriesCode != null and seriesCode != ''">
                AND series_code like concat('%', #{seriesCode}, '%')
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
        order by sort_order asc, create_time desc
    </select>

    <insert id="insertSeries" parameterType="ShopSnackSeries" useGeneratedKeys="true" keyProperty="seriesId">
        insert into shop_snack_series
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="seriesName != null and seriesName != ''">series_name,</if>
            <if test="seriesCode != null and seriesCode != ''">series_code,</if>
            <if test="seriesImage != null and seriesImage != ''">series_image,</if>
            <if test="seriesDesc != null">series_desc,</if>
            <if test="sortOrder != null">sort_order,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            create_time
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="seriesName != null and seriesName != ''">#{seriesName},</if>
            <if test="seriesCode != null and seriesCode != ''">#{seriesCode},</if>
            <if test="seriesImage != null and seriesImage != ''">#{seriesImage},</if>
            <if test="seriesDesc != null">#{seriesDesc},</if>
            <if test="sortOrder != null">#{sortOrder},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            sysdate()
        </trim>
    </insert>

    <update id="updateSeries" parameterType="ShopSnackSeries">
        update shop_snack_series
        <trim prefix="SET" suffixOverrides=",">
            <if test="seriesName != null and seriesName != ''">series_name = #{seriesName},</if>
            <if test="seriesCode != null and seriesCode != ''">series_code = #{seriesCode},</if>
            <if test="seriesImage != null and seriesImage != ''">series_image = #{seriesImage},</if>
            <if test="seriesDesc != null">series_desc = #{seriesDesc},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            update_time = sysdate()
        </trim>
        where series_id = #{seriesId}
    </update>

    <delete id="deleteSeriesById" parameterType="Long">
        delete from shop_snack_series where series_id = #{seriesId}
    </delete>

    <delete id="deleteSeriesByIds" parameterType="Long">
        delete from shop_snack_series where series_id in
        <foreach item="seriesId" collection="array" open="(" separator="," close=")">
            #{seriesId}
        </foreach>
    </delete>

</mapper>
