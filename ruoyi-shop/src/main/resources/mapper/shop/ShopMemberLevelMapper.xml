<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.shop.mapper.ShopMemberLevelMapper">

    <resultMap type="ShopMemberLevel" id="ShopMemberLevelResult">
        <result property="levelId"    column="level_id"    />
        <result property="levelName"    column="level_name"    />
        <result property="levelCode"    column="level_code"    />
        <result property="minPoints"    column="min_points"    />
        <result property="maxPoints"    column="max_points"    />
        <result property="discount"    column="discount"    />
        <result property="freeShipping"    column="free_shipping"    />
        <result property="freeShippingAmount"    column="free_shipping_amount"    />
        <result property="priority"    column="priority"    />
        <result property="icon"    column="icon"    />
        <result property="backgroundColor"    column="background_color"    />
        <result property="benefits"    column="benefits"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectMemberLevelVo">
        select level_id, level_name, level_code, min_points, max_points, discount, free_shipping, free_shipping_amount, priority, icon, background_color, benefits, status, remark, create_by, create_time, update_by, update_time
        from shop_member_level
    </sql>

    <select id="selectMemberLevelById" parameterType="Long" resultMap="ShopMemberLevelResult">
        <include refid="selectMemberLevelVo"/>
        where level_id = #{levelId}
    </select>

    <select id="selectMemberLevelList" parameterType="ShopMemberLevel" resultMap="ShopMemberLevelResult">
        <include refid="selectMemberLevelVo"/>
        <where>
            <if test="levelName != null and levelName != ''">
                AND level_name like concat('%', #{levelName}, '%')
            </if>
            <if test="levelCode != null and levelCode != ''">
                AND level_code = #{levelCode}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
            <if test="params.beginMinPoints != null">
                AND min_points &gt;= #{params.beginMinPoints}
            </if>
            <if test="params.endMinPoints != null">
                AND min_points &lt;= #{params.endMinPoints}
            </if>
        </where>
        order by priority asc, min_points asc
    </select>

    <insert id="insertMemberLevel" parameterType="ShopMemberLevel" useGeneratedKeys="true" keyProperty="levelId">
        insert into shop_member_level
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="levelName != null and levelName != ''">level_name,</if>
            <if test="levelCode != null and levelCode != ''">level_code,</if>
            <if test="minPoints != null">min_points,</if>
            <if test="maxPoints != null">max_points,</if>
            <if test="discount != null">discount,</if>
            <if test="freeShipping != null">free_shipping,</if>
            <if test="freeShippingAmount != null">free_shipping_amount,</if>
            <if test="priority != null">priority,</if>
            <if test="icon != null">icon,</if>
            <if test="backgroundColor != null">background_color,</if>
            <if test="benefits != null">benefits,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            create_time
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="levelName != null and levelName != ''">#{levelName},</if>
            <if test="levelCode != null and levelCode != ''">#{levelCode},</if>
            <if test="minPoints != null">#{minPoints},</if>
            <if test="maxPoints != null">#{maxPoints},</if>
            <if test="discount != null">#{discount},</if>
            <if test="freeShipping != null">#{freeShipping},</if>
            <if test="freeShippingAmount != null">#{freeShippingAmount},</if>
            <if test="priority != null">#{priority},</if>
            <if test="icon != null">#{icon},</if>
            <if test="backgroundColor != null">#{backgroundColor},</if>
            <if test="benefits != null">#{benefits},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            sysdate()
        </trim>
    </insert>

    <update id="updateMemberLevel" parameterType="ShopMemberLevel">
        update shop_member_level
        <trim prefix="SET" suffixOverrides=",">
            <if test="levelName != null and levelName != ''">level_name = #{levelName},</if>
            <if test="levelCode != null and levelCode != ''">level_code = #{levelCode},</if>
            <if test="minPoints != null">min_points = #{minPoints},</if>
            <if test="maxPoints != null">max_points = #{maxPoints},</if>
            <if test="discount != null">discount = #{discount},</if>
            <if test="freeShipping != null">free_shipping = #{freeShipping},</if>
            <if test="freeShippingAmount != null">free_shipping_amount = #{freeShippingAmount},</if>
            <if test="priority != null">priority = #{priority},</if>
            <if test="icon != null">icon = #{icon},</if>
            <if test="backgroundColor != null">background_color = #{backgroundColor},</if>
            <if test="benefits != null">benefits = #{benefits},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            update_time = sysdate()
        </trim>
        where level_id = #{levelId}
    </update>

    <delete id="deleteMemberLevelById" parameterType="Long">
        delete from shop_member_level where level_id = #{levelId}
    </delete>

    <delete id="deleteMemberLevelByIds" parameterType="Long">
        delete from shop_member_level where level_id in
        <foreach item="levelId" collection="array" open="(" separator="," close=")">
            #{levelId}
        </foreach>
    </delete>

</mapper>
