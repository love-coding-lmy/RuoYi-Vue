<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.shop.mapper.ShopSnackTagMapper">

    <resultMap type="ShopSnackTag" id="ShopSnackTagResult">
        <result property="tagId"    column="tag_id"    />
        <result property="tagName"    column="tag_name"    />
        <result property="tagCode"    column="tag_code"    />
        <result property="tagColor"    column="tag_color"    />
        <result property="tagType"    column="tag_type"    />
        <result property="iconUrl"    column="icon_url"    />
        <result property="sortOrder"    column="sort_order"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectTagVo">
        select tag_id, tag_name, tag_code, tag_color, tag_type, icon_url, sort_order, status, create_by, create_time, update_by, update_time
        from shop_snack_tag
    </sql>

    <select id="selectTagById" parameterType="Long" resultMap="ShopSnackTagResult">
        <include refid="selectTagVo"/>
        where tag_id = #{tagId}
    </select>

    <select id="selectTagList" parameterType="ShopSnackTag" resultMap="ShopSnackTagResult">
        <include refid="selectTagVo"/>
        <where>
            <if test="tagName != null and tagName != ''">
                AND tag_name like concat('%', #{tagName}, '%')
            </if>
            <if test="tagCode != null and tagCode != ''">
                AND tag_code like concat('%', #{tagCode}, '%')
            </if>
            <if test="tagType != null and tagType != ''">
                AND tag_type = #{tagType}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
        order by sort_order asc, create_time desc
    </select>

    <insert id="insertTag" parameterType="ShopSnackTag" useGeneratedKeys="true" keyProperty="tagId">
        insert into shop_snack_tag
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="tagName != null and tagName != ''">tag_name,</if>
            <if test="tagCode != null and tagCode != ''">tag_code,</if>
            <if test="tagColor != null and tagColor != ''">tag_color,</if>
            <if test="tagType != null">tag_type,</if>
            <if test="iconUrl != null and iconUrl != ''">icon_url,</if>
            <if test="sortOrder != null">sort_order,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            create_time
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="tagName != null and tagName != ''">#{tagName},</if>
            <if test="tagCode != null and tagCode != ''">#{tagCode},</if>
            <if test="tagColor != null and tagColor != ''">#{tagColor},</if>
            <if test="tagType != null">#{tagType},</if>
            <if test="iconUrl != null and iconUrl != ''">#{iconUrl},</if>
            <if test="sortOrder != null">#{sortOrder},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            sysdate()
        </trim>
    </insert>

    <update id="updateTag" parameterType="ShopSnackTag">
        update shop_snack_tag
        <trim prefix="SET" suffixOverrides=",">
            <if test="tagName != null and tagName != ''">tag_name = #{tagName},</if>
            <if test="tagCode != null and tagCode != ''">tag_code = #{tagCode},</if>
            <if test="tagColor != null and tagColor != ''">tag_color = #{tagColor},</if>
            <if test="tagType != null">tag_type = #{tagType},</if>
            <if test="iconUrl != null and iconUrl != ''">icon_url = #{iconUrl},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            update_time = sysdate()
        </trim>
        where tag_id = #{tagId}
    </update>

    <delete id="deleteTagById" parameterType="Long">
        delete from shop_snack_tag where tag_id = #{tagId}
    </delete>

    <delete id="deleteTagByIds" parameterType="Long">
        delete from shop_snack_tag where tag_id in
        <foreach item="tagId" collection="array" open="(" separator="," close=")">
            #{tagId}
        </foreach>
    </delete>

</mapper>
