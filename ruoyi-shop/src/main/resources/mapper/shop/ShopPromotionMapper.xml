<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.shop.mapper.ShopPromotionMapper">

    <resultMap type="ShopPromotion" id="ShopPromotionResult">
        <result property="promotionId"    column="promotion_id"    />
        <result property="promotionName"    column="promotion_name"    />
        <result property="promotionType"    column="promotion_type"    />
        <result property="discountValue"    column="discount_value"    />
        <result property="conditionAmount"    column="condition_amount"    />
        <result property="startTime"    column="start_time"    />
        <result property="endTime"    column="end_time"    />
        <result property="promotionDesc"    column="promotion_desc"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectPromotionVo">
        select promotion_id, promotion_name, promotion_type, discount_value, condition_amount, start_time, end_time, promotion_desc, status, create_by, create_time, update_by, update_time
        from shop_promotion
    </sql>

    <select id="selectPromotionById" parameterType="Long" resultMap="ShopPromotionResult">
        <include refid="selectPromotionVo"/>
        where promotion_id = #{promotionId}
    </select>

    <select id="selectPromotionList" parameterType="ShopPromotion" resultMap="ShopPromotionResult">
        <include refid="selectPromotionVo"/>
        <where>
            <if test="promotionName != null and promotionName != ''">
                AND promotion_name like concat('%', #{promotionName}, '%')
            </if>
            <if test="promotionType != null and promotionType != ''">
                AND promotion_type = #{promotionType}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
            <if test="params.beginTime != null and params.beginTime != ''">
                AND start_time &gt;= #{params.beginTime}
            </if>
            <if test="params.endTime != null and params.endTime != ''">
                AND end_time &lt;= #{params.endTime}
            </if>
        </where>
        order by create_time desc
    </select>

    <insert id="insertPromotion" parameterType="ShopPromotion" useGeneratedKeys="true" keyProperty="promotionId">
        insert into shop_promotion
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="promotionName != null and promotionName != ''">promotion_name,</if>
            <if test="promotionType != null">promotion_type,</if>
            <if test="discountValue != null">discount_value,</if>
            <if test="conditionAmount != null">condition_amount,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="promotionDesc != null">promotion_desc,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            create_time
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="promotionName != null and promotionName != ''">#{promotionName},</if>
            <if test="promotionType != null">#{promotionType},</if>
            <if test="discountValue != null">#{discountValue},</if>
            <if test="conditionAmount != null">#{conditionAmount},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="promotionDesc != null">#{promotionDesc},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            sysdate()
        </trim>
    </insert>

    <update id="updatePromotion" parameterType="ShopPromotion">
        update shop_promotion
        <trim prefix="SET" suffixOverrides=",">
            <if test="promotionName != null and promotionName != ''">promotion_name = #{promotionName},</if>
            <if test="promotionType != null">promotion_type = #{promotionType},</if>
            <if test="discountValue != null">discount_value = #{discountValue},</if>
            <if test="conditionAmount != null">condition_amount = #{conditionAmount},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="promotionDesc != null">promotion_desc = #{promotionDesc},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            update_time = sysdate()
        </trim>
        where promotion_id = #{promotionId}
    </update>

    <delete id="deletePromotionById" parameterType="Long">
        delete from shop_promotion where promotion_id = #{promotionId}
    </delete>

    <delete id="deletePromotionByIds" parameterType="Long">
        delete from shop_promotion where promotion_id in
        <foreach item="promotionId" collection="array" open="(" separator="," close=")">
            #{promotionId}
        </foreach>
    </delete>

</mapper>
